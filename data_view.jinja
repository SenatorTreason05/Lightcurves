<html>

<head>
  <title>Light Curves</title>
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen",
        "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue",
        sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      font-size: calc(10px + 2vmin);
    }

    table,
    th,
    td {
      border: 1px solid;
    }

    table {
      width: 80%;
      margin: 0px 0px 30px 0px;
      border-collapse: collapse;
    }

    th,
    td {
      padding: 7px;
      text-align: center;
    }

    p {
      border: 1px dashed;
      padding: 15px;
    }
  </style>
</head>


<body>
  <h1>Light Curve Output for {{ object_name }}</h1>
  <p>
    Significance Threshold: â‰¥{{ significance_threshold }}
    <br />Search Radius: {{ search_radius }}
    <br />Sources: {{source_count }}
  </p>
  {% for source_name, source_data in render_data.items() %}
  <tr>
    <h2>{{ source_name }}</h2>
  </tr>
  {% if not source_data %}
  <p>No data, either invalid or unsupported.</p>
  {% endif %}
  <table>
    {% for observation in source_data %}
    <tr>
      {% for property_key in observation[0].keys() %}
      <th>{{ property_key }}</th>
      {% endfor %}
    </tr>
    <tr>
      {% for property_value in observation[0].values() %}
      <td>{{ property_value }}</td>
      {% endfor %}
    </tr>
    <tr>
      <td colspan="{{ observation[0].keys().__len__() }}">
        {{ observation[1] }}
      </td>
    </tr>
    {% endfor %}
  </table>
  {% endfor %}
</body>

</html>